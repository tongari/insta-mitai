<section class="regist">

  <div class="regist__notice">
    <%= notice %>
    <%= alert %>
  </div>


  <div class="panel panel-default">

    <div class="panel-heading">
      <h1 class="regist__logo">
        <img src="<%= asset_path "logo.svg" %>">
      </h1>
    </div>


    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, autofocus: true , placeholder: 'メールアドレス', class: 'regist__formControl form-control' %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: 'off', placeholder: 'パスワード', class: 'regist__formControl form-control' %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end -%>

          <div class="actions">
            <%= f.submit 'ログイン', class:'btn btn-primary btn-block' %>
          </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>





