<h2>サインアップ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
  </div>

  <!-- 名前入力用のフィールドを追加 -->
  <div class="field">
    <%= f.text_field :name, placeholder: "名前" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上 〜 <%= resource_class.password_length.max %>文字以下)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.shared.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
