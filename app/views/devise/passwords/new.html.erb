<section class="regist">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="regist__logo">
        <img src="<%= asset_path "logo.svg" %>">
      </h1>
    </div>

    <div class="panel-body">
      <h2><%= t('devise.shared.forgot_your_password') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholoder: 'メールアドレス', class:'regist__formControl form-control' %>
          </div>
          <div class="actions">
            <%= f.submit 'パワスワードを再設定する', class:'btn btn-primary btn-block' %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>




